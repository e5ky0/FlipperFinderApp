    <TextView
        android:id="@+id/currentlatlngtext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="16dp"
        android:layout_marginStart="16dp"
        android:text="@string/currentlatng_text"
        android:textSize="16sp"
        app:layout_constraintBottom_toTopOf="@id/dbchronotext"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/currentlatlng"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginStart="8dp"
        android:text="(47.345433, 4.876573)"
        android:textColor="@color/appirator_button_end_color"
        android:textSize="16sp"
        app:layout_constraintBaseline_toBaselineOf="@id/currentlatlngtext"
        app:layout_constraintStart_toEndOf="@+id/currentlatlngtext"
        android:visibility="invisible"/>



    <TextView
        android:id="@+id/dbchronotext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="16dp"
        android:layout_marginStart="16dp"
        android:text="@string/dbchrono_text"
        android:textSize="16sp"
        app:layout_constraintBottom_toTopOf="@id/datemajtext"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/dbchrono"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginStart="8dp"
        android:text="TextView"
        android:textColor="@color/appirator_button_end_color"
        android:textSize="16sp"
        app:layout_constraintBaseline_toBaselineOf="@id/dbchronotext"
        app:layout_constraintStart_toEndOf="@+id/dbchronotext" />

    <TextView
        android:id="@+id/datemajtext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="16dp"
        android:layout_marginStart="16dp"
        android:text="@string/DateLastMaj"
        android:textSize="16sp"
        app:layout_constraintBottom_toTopOf="@+id/nbflipstext"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/datedernieremaj"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginStart="8dp"
        android:text="TextView"
        android:textColor="@color/appirator_button_end_color"
        android:textSize="16sp"
        app:layout_constraintBaseline_toBaselineOf="@+id/datemajtext"
        app:layout_constraintStart_toEndOf="@+id/datemajtext" />



    <TextView
        android:id="@+id/nbflipstext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="16dp"
        android:layout_marginStart="16dp"
        android:text="@string/NbreFlipsActifs"
        android:textSize="16sp"
        app:layout_constraintBottom_toTopOf="@id/eraseDBbutton"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/nbflips"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginStart="8dp"
        android:text="TextView"
        android:textColor="@color/appirator_button_end_color"
        android:textSize="16sp"
        app:layout_constraintBaseline_toBaselineOf="@id/nbflipstext"
        app:layout_constraintStart_toEndOf="@+id/nbflipstext" />

    <Button
        android:id="@+id/eraseDBbutton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/EraseBD_button"
        android:backgroundTint="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

</android.support.constraint.ConstraintLayout>
