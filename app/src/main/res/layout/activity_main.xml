     <Button
        android:id="@+id/boutonMenuRechercher"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:minWidth="250dp"
        android:minHeight="50dp"
        android:text="@string/BoutonAccueilRechercher"
        android:layout_centerHorizontal="true"/>

    <Button
        android:id="@+id/boutonMenuSignaler"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:minWidth="250dp"
        android:minHeight="50dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/boutonMenuRechercher"
        android:text="@string/BoutonAccueilSignaler"/>

    <Button
        android:id="@+id/boutonMenuTournoi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:minWidth="250dp"
        android:minHeight="50dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/boutonMenuSignaler"
        android:text="@string/BoutonAccueilTournoi"/>

    <TextView
        android:id="@+id/boutonInfo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:minWidth="250dp"
        android:minLines="2"
        android:minHeight="50dp"
        android:textStyle="italic"
        android:text="Cette application est la reprise de Flipper Finder"
        android:layout_below="@+id/boutonMenuTournoi"
        android:layout_centerHorizontal="true" />
    
    <TextView
        android:id="@+id/InfoApp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:minWidth="250dp"
        android:minLines="2"
        android:minHeight="50dp"
        android:textStyle="italic"
        android:text="Cette app est la reprise de Flipper Finder"
        android:layout_below="@+id/boutonMenuTournoi"
        android:layout_centerHorizontal="true" />
    
    <ImageView
        android:id="@+id/imageEnveloppe"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_marginBottom="20dp"
        android:layout_marginLeft="20dp"
        android:contentDescription="Envoyer un mail"
        android:src="@drawable/custom_enveloppe" />

    <ImageView
        android:id="@+id/imagePreferences"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="20dp"
        android:layout_marginRight="20dp"
        android:contentDescription="Préférences"
        android:src="@drawable/custom_settings" />

</RelativeLayout>
