<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/nomEnseigne"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="5sp"
        android:text="Nom Enseigne"
        android:textSize="16sp" 
        android:layout_marginLeft="5dp"/>

    <TextView
        android:id="@+id/adresseEnseigne"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/nomEnseigne"
        android:text="Adresse prÃ©cise de l&apos;Enseigne"
        android:textSize="16sp" 
        android:layout_marginLeft="5dp"/>

    <TextView
        android:id="@+id/dateMajFlip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/adresseEnseigne"
        android:text="@string/dateMaj"
        android:textSize="16sp"
        android:layout_marginLeft="5dp"/>
    
    <View style="@style/itemDivider" 
          android:id="@+id/divider"
          android:layout_below="@id/dateMajFlip"/>
    
        <android.support.v4.view.ViewPager
	        android:id="@+id/pager"
	        android:layout_below="@id/divider"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content" />

</RelativeLayout>